<div class="container">
  <div class="row justify-content-center">
    <div class="col-12 col-lg-6">
      <h2 class="form-title"> Add a post </h2>
        <%= simple_form_for @post do |f| %>
          <%= f.input :title %>
          <%= f.input :content %>
          <%= f.submit "Submit post", class: "btn btn-red" %>
        <% end %>
    </div>
  </div>
</div>
