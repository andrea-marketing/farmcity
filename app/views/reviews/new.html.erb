
<div class="container">
  <div class="row justify-content-center">
    <div class="col-12 col-lg-6">
      <h2 class="form-title"> Add a review </h2>
        <%= simple_form_for [ @producer, @review ] do |f| %>
          <%= f.input :content %>
          <%= f.input :rating, collection: Review::AUTHORIZED_RATINGS, include_blank: false%>
          <%= f.submit "Submit review", class: "btn btn-red" %>
        <% end %>
    </div>
  </div>
</div>
