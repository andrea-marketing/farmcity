<!-- Banner -->
<div class="banner">
  <div class="container">
    <div class="row justify-content-center">
      <div class="col-12 col-lg-6">

        <h1> Let's find you <i class="highlight">local producers</i> near you! </h1>

        <div class="box">
          <p> What city will you be in? </p>

            <!-- Search bar -->
            <%= form_tag producers_path, method: :get do %>
              <%= text_field_tag :query,
                params[:query],
                class: "form-control",
                id: "searchbar",
                placeholder: "Enter an address"  %>
              <%= submit_tag "Search", class: "btn btn-red" %>
            <% end %>

        </div>
      </div>
    </div>


  </div>
</div>
