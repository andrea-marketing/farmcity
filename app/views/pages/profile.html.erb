<div class="container">
  <div class="row justify-content-center">
    <div class="col-12 col-lg-6">
      <div class="profile">
        <h1><%= @user.first_name %> <%= @user.last_name %></h1>
        <br>
        <% if current_user.photo.attached? %>
          <%= cl_image_tag @user.photo.key %>
        <% else %>
          <%= image_tag "photo-avatar-profil.png" %>
        <% end %>
        <br>
        <p><%= @user.email %></p>
        <br>
        <%= link_to ("<i class='fa-solid fa-pencil'></i> Edit profile").html_safe, edit_user_registration_path(@user), class: "btn-red" %>
        <br>
        <%= link_to ("<i class='fa-solid fa-tractor'></i> Create a new producer profile").html_safe, new_producer_path, class: "btn-link" %>
      </div>
    </div>
  </div>
</div>
