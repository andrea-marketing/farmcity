<h1>Producers</h1>

<!-- [...] -->
<%= form_tag producers_path, method: :get do %>
  <%= text_field_tag :query,
    params[:query],
    class: "form-control",
    placeholder: "Enter a product" %>
  <%= submit_tag "Search", class: "btn btn-primary" %>
<% end %>

<!-- the list of producers -->
<div class="container">

  <%# <%= link_to "Producer", producers_path(@producer), class: "" %>

  <div class="cards">
    <% @producers.each do |producer| %>
      <%= link_to producer_path(producer) , :action => 'go' do %>
        <div class="">
          <% if producer.photo.attached? %>
            <%= cl_image_tag producer.photo.key, height: 300, width: 400, crop: :fill %>
          <% end %>
          <div class="">
            <div>
              <p><strong><%= producer.name %></strong></p>
              <p><%= producer.producer_type  %></p>
              <p><%= producer.address %></p>
            </div>
          </div>
        </div>
      <% end %>
    <% end %>
  </div>
</div>
