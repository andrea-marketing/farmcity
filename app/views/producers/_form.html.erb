<%= simple_form_for(producer) do |f| %>
  <%= f.input :name %>
  <%= f.input :address,
              input_html: { data: { geocoder_target: "address" }, class: "d-none" },
              wrapper_html: { data: { controller: "geocoder",
              geocoder_api_key_value: ENV['MAPBOX_API_KEY'] } } %>
  <%= f.input :producer_type %>
  <%= f.input :categories, collection: Product::TAGS , placeholder: 'Honey', as: :check_boxes %>
  <%= f.input :description %>
  <%= f.input :contact %>
  <%= f.input :photos, as: :file, input_html: { multiple: true } %>
  <%= f.submit class: "btn btn-red mt-2 mb-3" %>
<% end %>
