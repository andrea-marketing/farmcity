<div class="container">
  <% @producer.photos.each do |photo| %>
    <%= cl_image_tag photo.key, height: 300, width: 400, crop: :fill %>
  <% end %>
  <h1><%=@producer.name.capitalize%>, <%=@producer.producer_type.capitalize%></h1>
  <p><%=@producer.address%></p>
  <br>
  <p><%=@producer.description%></p>
  <br>
  <p>For more informations, send me an email at <%=@producer.contact%></p>

   <div class="buttons">
      <% if policy(@producer).edit? %>
        <%= link_to "Update", edit_producer_path(@producer) %>
      <% end %>
      <% if policy(@producer).destroy? %>
        <%= link_to "Delete", producer_path(@producer),
                      method: :delete,
                      data: { confirm: "Are you sure?" } ,
                      class:"btn-red"%>
      <% end %>
    </div>

     <%= link_to 'Add a market', new_producer_point_of_sale_path(@producer, @point_of_sale) %>

    <% @producer.point_of_sales.each do |pointofsale| %>
      <div class="col-6">
        <h2 class=""><%= pointofsale.market.name.upcase %></h2>
          <p class="mt-3"><%= pointofsale.market.address %></p>
      </div>
      <div>
        <h2 class=""><%= pointofsale.market.description %></h2>
      </div>
    <% end %>
</div>
