<div class="footer">

  <%= link_to "/posts", :action => 'go' do %>
    <div class="tabs <%= current_page?("/") ? 'active' : '' %>">
      <i class="fa-solid fa-book"></i>
    </div>
  <% end %>

  <% if user_signed_in? %>
    <%= link_to "/notifications", :action => 'go', class: "notif", data: {controller: "notification-subscription", notification_subscription_user_id_value: current_user.id} do %>
      <div class="tabs <%= current_page?("/posts") ? 'active' : '' %>">
          <i class="fa-solid fa-envelope"></i>
          <span class="count <%= current_user.unread_count > 0 ? '' : 'd-none' %>" data-notification-subscription-target="bubble">
            <%= current_user.unread_count %>
          </span>
      </div>
    <% end %>
  <% end %>

  <%= link_to "/producers", :action => 'go' do %>
    <div class="tabs <%= current_page?("/producers") ? 'active' : '' %>">
      <i class="fa-solid fa-house"></i>
    </div>
  <% end %>

  <%= link_to "/favorites", :action => 'go' do %>
    <div class="tabs <%= current_page?("/favorites") ? 'active' : '' %>">
      <i class="fa-solid fa-heart"></i>
    </div>
  <% end %>

  <% if user_signed_in? %>
    <% if current_user.photo.attached? %>
      <%= link_to "/profile", :action => 'go' do %>
        <div class="tabs <%= current_page?("/profile") ? 'active' : '' %>">
          <%= cl_image_tag current_user.photo.key, class: "avatar" %>
        </div>
      <% end %>
    <% else %>
      <%= link_to "/profile", :action => 'go' do %>
        <div class="tabs <%= current_page?("/profile") ? 'active' : '' %>">
          <i class="fa-solid fa-user"></i>
        </div>
      <% end %>
    <% end %>

  <% else %>
    <%= link_to "/profile", :action => 'go' do %>
      <div class="tabs <%= current_page?("/profile") ? 'active' : '' %>">
        <i class="fa-solid fa-user"></i>
      </div>
    <% end %>
  <% end %>

</div>
